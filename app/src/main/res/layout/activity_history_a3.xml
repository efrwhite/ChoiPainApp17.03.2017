<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.elizabethwhitebaker.choipainapp17032017.HistoryA3"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">


    <CheckBox
        android:id="@+id/checkBoxa3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="Kidney Disease"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox9a3"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox11a3" />

    <CheckBox
        android:id="@+id/checkBox2a3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="Liver Disease"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox10a3"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox12a3" />

    <CheckBox
        android:id="@+id/checkBox3a3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="Heart Disease"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox11a3"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox12a3" />

    <CheckBox
        android:id="@+id/checkBox4a3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="Respiratory Disease"
        tools:ignore="HardcodedText"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox11a3"
        app:layout_constraintLeft_toLeftOf="@+id/editText3a3" />

    <CheckBox
        android:id="@+id/checkBox9a3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="Other"
        android:layout_marginStart="13dp"
        app:layout_constraintTop_toTopOf="@+id/editText3a3"
        android:layout_marginLeft="13dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <CheckBox
        android:id="@+id/checkBox10a3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="Neurologic Disease"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox4a3"
        app:layout_constraintBaseline_toBaselineOf="@+id/checkBox3a3" />

    <CheckBox
        android:id="@+id/checkBox11a3"
        android:layout_width="150dp"
        android:layout_height="33dp"
        android:text="Gastrointestinal Disease"
        app:layout_constraintLeft_toLeftOf="@+id/checkBoxa3"
        android:layout_marginTop="11dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox3a3" />

    <CheckBox
        android:id="@+id/checkBox12a3"
        android:layout_width="0dp"
        android:layout_height="32dp"
        android:text="Endocrine Disease"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        app:layout_constraintLeft_toLeftOf="@+id/checkBox3a3" />

    <EditText
        android:id="@+id/editText3a3"
        android:layout_width="162dp"
        android:layout_height="76dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:text="Other medical conditions"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toTopOf="@+id/nextButtonHA3"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/checkBox4a3" />


    <Button
        android:id="@+id/nextButtonHA3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/prevButtonHA3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/prevButtonHA3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Previous"
        app:layout_constraintRight_toLeftOf="@+id/nextButtonHA3"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="327dp"
        android:layout_height="45dp"
        android:text="Do you have other medical conditions?"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="16dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp" />
</android.support.constraint.ConstraintLayout>
